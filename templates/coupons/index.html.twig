{% extends 'base.html.twig' %}

{% block title %}Coupons index{% endblock %}

{% block body %}
    <h1>Coupons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.doctor }}</td>
                <td>{{ coupon.patient }}</td>
                <td>{{ coupon.date ? coupon.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('coupons_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('coupons_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coupons_new') }}">Create new</a>
    <a href="{{path('admin')}}">Back</a>
{% endblock %}
